{
  "name": "vmtp-users",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "sls:package": "sls package -s dev",
    "sls:deploy": "sls deploy -s dev",
    "build": "tsc",
    "tf:deploy-dev": "terraform -chdir=./deployment/envs/dev apply",
    "tf:deploy-sit": "terraform -chdir=./deployment/envs/sit apply",
    "tf:deploy-prod": "terraform -chdir=./deployment/envs/prod apply",
    "tf:destroy-dev": "terraform -chdir=./deployment/envs/dev destroy",
    "tf:destroy-sit": "terraform -chdir=./deployment/envs/sit destroy",
    "tf:destroy-prod": "terraform -chdir=./deployment/envs/prod destroy"
  },
  "author": "VM",
  "license": "ISC",
  "description": "Users starage & API",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.696.0",
    "aws-lambda": "^1.0.7"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.1",
    "jest": "^29.7.0",
    "npm": "^10.9.1",
    "serverless": "^4.4.10",
    "serverless-plugin-dynamodb-autoscaling": "^3.1.1",
    "serverless-plugin-git-variables": "^5.2.0",
    "serverless-prune-plugin": "^2.1.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "testEnvironment": "node",
    "transform": {
      ".(ts)": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "coverage",
      "dist"
    ],
    "transformIgnorePatterns": [
      "^.+\\.js$"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist"
    ],
    "collectCoverageFrom": [
      "./src/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],    
    "reporters": [
      "default"
    ]
  }
}
